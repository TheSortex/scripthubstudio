{
  "name": "scripthubstudio",
  "version": "1.0.0",
  "private": true,
  "description": "A versatile application combining a rich-text editor for authors, a code editor, and a markdown documentation tool to streamline creative and technical workflows.",
  "main": "be/main.js",
  "scripts": {
    "start": "pnpm run build:fe && electron-forge start",
    "build:fe": "pnpm --filter fe build",
    "build:be": "pnpm --filter be build",
    "build": "pnpm run build:fe && pnpm run build:be",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "Bastian Bensch",
  "license": "",
  "config": {
    "forge": {
      "packageManager": "pnpm",
      "packagerConfig": {
        "icon": "./assets/icon",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "scripthubstudio"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "your-github-username",
              "name": "scripthubstudio"
            },
            "prerelease": false
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "debug": "^4.4.0",
    "electron": "^33.2.1",
    "electron-reload": "2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.1"
  }
}