{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/render/**/*",
    "src/shared/**/*",
    "types/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@type/*": ["types/*"],
      "@resources/*": ["src/resources/*"],
      "@shared/*": ["src/shared/*"]
    },
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
